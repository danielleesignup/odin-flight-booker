<h1>Booking Details</h1>

<p><strong>Booking ID:</strong> <%= @booking.id %></p>

<h2>Flight Details</h2>
<ul>
  <li>Flight Number: <%= @booking.flight.number %></li>
  <li>Origin: <%= @booking.flight.departure_airport.code %></li>
  <li>Destination: <%= @booking.flight.arrival_airport.code %></li>
  <li>Flight Time: <%= @booking.flight.start_datetime %></li>
  <li>Duration: <%= @booking.flight.duration %> minutes</li>
</ul>

<h2>Passenger Details</h2>
<% @booking.passengers.each do |passenger| %>
  <ul>
    <li>Name: <%= passenger.name %></li>
    <li>Email: <%= passenger.email %></li>
  </ul>
<% end %>
